<h1>Game Comments</h1>

<% @game.comments.each do |c|%>
    <%#<%= c.comments %>
    
    <% if User.find_by(id: c.user_id)%> 
    <%=User.find_by(id: c.user_id).username%> ----:><%=c.comment%>
    <% if c.user_id == current_user.id %>
    <%= comment_id = @game.comments.find_by_id(c.id).id %>
    <%= hidden_field :comment_id, :value => comment_id %>
    <%= button_to "Delete", comment_path(comment_id), method: "delete" %>
    <%end%>
    
    <% end %>
<% end %>

<%= link_to "Game Feed", games_path(@game) %>