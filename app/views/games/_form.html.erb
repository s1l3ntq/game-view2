<% if @game.errors.any? %>
    <%=render partial: '/errors', locals: {mistake: @game}%>
<% end %>

<%= form_for(@game) do |f| %>
<%= f.label "name:" %>
<%= f.text_field :name %>
<%# <%= f.label "demo:" %>
<%# <%= f.file_field :demo %>
<%= f.label "description:" %>
<%= f.text_field :description %>
<h2> Add Platform </h2>
<%= f.fields_for :game do |p| %>
    <%= p.label "Platform" %>
    <%= p.label "name" %>
<% end %>
<%= f.text_field :platform %>

   
<%= f.submit %>

<% end %>